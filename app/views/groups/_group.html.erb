<ul>
    <li>
      <%= link_to group.title, group %>
      <% if group.users.include? current_user %>
        <%= button_to "Leave Group", group_group_membership_path(group, current_user.membership_for(group)), method: :delete %>
      <% else %>
        <%= button_to "Join Group", group_group_memberships_path(group) %>
      <% end %>
    </li>
</ul>
